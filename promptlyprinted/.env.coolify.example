# Coolify Environment Variables Template
# Copy this file to use as reference when configuring Coolify services
# DO NOT commit actual values - this is just a template

# ================================================================
# DATABASE
# ================================================================
DATABASE_URL=postgresql://user:password@host:5432/database
PULSE_API_KEY=your-pulse-api-key

# ================================================================
# AUTHENTICATION
# ================================================================
BETTER_AUTH_SECRET=your-random-secret-here
BETTER_AUTH_URL=https://app.yourdomain.com
NEXT_PUBLIC_BETTER_AUTH_URL=https://app.yourdomain.com

# ================================================================
# CONTENT MANAGEMENT (BaseHub)
# ================================================================
BASEHUB_TOKEN=your-basehub-token
BASEHUB_ADMIN_TOKEN=your-basehub-admin-token

# ================================================================
# PAYMENTS & ORDERS (Square)
# ================================================================
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_LOCATION_ID=your-location-id
SQUARE_ENVIRONMENT=production
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature

# ================================================================
# PRINT API (Prodigi)
# ================================================================
PRODIGI_API_KEY=your-prodigi-api-key
PRODIGI_API=https://api.prodigi.com/v4.0

# ================================================================
# EMAIL (Resend)
# ================================================================
RESEND_TOKEN=your-resend-token
RESEND_FROM=noreply@yourdomain.com
RESEND_AUDIENCE_ID=your-audience-id

# ================================================================
# AI SERVICES
# ================================================================
GOOGLE_GEMINI_API_KEY=your-gemini-api-key
TOGETHER_API_KEY=your-together-api-key

# ================================================================
# FEATURE FLAGS
# ================================================================
FLAGS_SECRET=your-flags-secret

# ================================================================
# WEBHOOKS
# ================================================================
SVIX_TOKEN=your-svix-token

# ================================================================
# COLLABORATION (Liveblocks)
# ================================================================
LIVEBLOCKS_SECRET=your-liveblocks-secret

# ================================================================
# MONITORING (BetterStack)
# ================================================================
BETTERSTACK_API_KEY=your-betterstack-api-key
BETTERSTACK_URL=https://uptime.betterstack.com

# ================================================================
# SECURITY (Arcjet)
# ================================================================
ARCJET_KEY=your-arcjet-key

# ================================================================
# ANALYTICS
# ================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=your-posthog-api-key

# ================================================================
# PUBLIC URLS
# ================================================================
NEXT_PUBLIC_APP_URL=https://app.yourdomain.com
NEXT_PUBLIC_WEB_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_DOCS_URL=https://docs.yourdomain.com
NEXT_PUBLIC_VERCEL_PROJECT_PRODUCTION_URL=yourdomain.com

# ================================================================
